{
  "name": "resvelte",
  "displayName": "ReSvelte",
  "description": "Debugging tool for re-rendering components in Svelte",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:resvelte.helloWorld",
    "onCommand:resvelte.start",
		"onView:ReSvelte-Sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
		"viewsContainers": {
      "activitybar": [
        {
          "id": "resvelte-sidebar-view",
          "title": "ReSvelte",
          "icon": "assets/ReSvelte.svg"
        }
      ]
    },
    "views": {
      "resvelte-sidebar-view": [
        {
          "type": "webview",
          "id": "ReSvelte-Sidebar",
          "name": "ReSvelte",
          "icon": "assets/ReSvelte.svg",
          "contextualTitle": "ReSvelte"
        }
      ]
    },
    "commands": [
      {
        "command": "resvelte.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "resvelte.start",
        "title": "Start ReSvelte"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "babel-loader": "^8.2.4",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.5.5",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "path": "^0.12.7",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-jsx": "^1.0.0",
    "react-redux": "^7.2.8"
  }
}
