{
  "name": "resvelte",
  "displayName": "ReSvelte",
  "description": "A debugging tool for re-renders in Svelte",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:resvelte.helloWorld",
    "onView:resvelte-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "resvelte-sidebar-view",
          "title": "ReSvelte",
          "icon": "media/ReSvelte_Logo.svg"
        }
      ]
    },
    "views": {
      "resvelte-sidebar-view": [
        {
          "type": "webview",
          "id": "resvelte-sidebar",
          "name": "ReSvelte",
          "icon": "media/ReSvelte_Logo.svg",
          "contextualTitle": "ReSvelte"
        }
      ]
    },
    "commands": [
      {
        "command": "resvelte.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "rollup": "^2.70.1",
    "rollup-plugin-svelte": "^7.1.0",
    "sass": "^1.49.11",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "svelte": "^3.46.6",
    "ts-loader": "^9.2.8",
    "typescript": "^4.5.5",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "react-jsx": "^1.0.0",
    "react-redux": "^7.2.8",
    "svelte-loader": "^3.1.2"
  }
}
